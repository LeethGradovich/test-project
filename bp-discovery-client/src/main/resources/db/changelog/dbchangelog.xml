<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="postgres">
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="surname" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="patronymic" type="varchar(255)"/>
            <column name="passport_series" type="varchar(10)"/>
            <column name="passport_number" type="integer"/>
            <column name="date_of_birth" type="varchar(255)"/>
            <column name="date_of_issue" type="varchar(255)"/>
            <column name="family_status" type="varchar(30)"/>
            <column name="monthly_income" type="integer"/>
            <column name="monthly_expense_on_loans_and_alimony" type="integer"/>
            <column name="email" type="varchar(255)"/>
            <column name="confirmation_method" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>